{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    //modificacion para
    // "baseUrl": "./src", // Establece la raíz para resolver rutas no relativas

    "paths": {
      // "assets/*": ["src/assets/*"], // Define un alias para resolver 'assets'
      // "auth/*": ["src/auth/*"], // Define un alias para resolver 'auth'
      // "general_components/*": ["src/general_components/*"] // y así sucesivamente
    }
  },

  "include": [
    "src", // Asegúrate de incluir la carpeta src
    "src/types/svg.d.ts" // Incluye el archivo de definiciones si está en una carpeta específica
, "src/pages/forms/categoryDetail/CategoryAccountList.tsx", "transporatr.md/createDropdownFieldHandler.ts", "transporatr.md/Transfer copy.tsx", "transporatr.md/useFormPnLManager copy.ts"  ]
}
